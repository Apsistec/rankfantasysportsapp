{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
      "noErrorTruncation": true,
      "extendedDiagnostics": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "diagnostics": true,
      "paths": {
        "@services/*": ["app/_services/*"],
        "@guards/*": ["app/_guards/*"],
        "@directives/*": ["app/_directives/*"],
        "@models/*": ["app/_models/*"],
        "@helpers/*": ["app/_helpers/*"],
        "@environments/*": ["environments/*"],
        "@shared/*": ["app/_shared/*"],
        "@pipes/*": ["app/_pipes/*"]
    }
  }
}
