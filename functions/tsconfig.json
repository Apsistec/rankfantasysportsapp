{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "stripe-v3"
      
    ]
  },
  "include": [
      "src/**/*.ts",
      "node_modules/@types"
  ],
  "atom": {
      "rewriteTsconfig": false
  }
}